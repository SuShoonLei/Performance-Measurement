    <script>
        let polling = null;
        
        async function runBenchmark() {
            const btn = document.getElementById('runBtn');
            const status = document.getElementById('statusBar');
            const statusText = document.getElementById('statusText');
            const results = document.getElementById('results');
            
            btn.disabled = true;
            status.style.display = 'block';
            status.className = 'status running';
            statusText.innerHTML = '<span class="spinner"></span>Starting benchmarks...';
            results.textContent = 'Initializing benchmark suite...';
            
            try {
                const response = await fetch('/api/run');
                const data = await response.json();
                
                if (data.status === 'started') {
                    statusText.innerHTML = '<span class="spinner"></span>Running benchmarks... Please wait...';
                    startPolling();
                }
            } catch (error) {
                results.textContent = 'Error starting benchmark: ' + error;
                btn.disabled = false;
                status.style.display = 'none';
            }
        }
        
        function startPolling() {
            if (polling) clearInterval(polling);
            
            polling = setInterval(async () => {
                try {
                    const response = await fetch('/api/results');
                    const data = await response.json();
                    
                    document.getElementById('results').textContent = data.results;
                    
                    if (data.status === 'complete') {
                        clearInterval(polling);
                        const status = document.getElementById('statusBar');
                        const statusText = document.getElementById('statusText');
                        status.className = 'status complete';
                        statusText.textContent = 'âœ… Benchmarks completed successfully!';
                        document.getElementById('runBtn').disabled = false;
                        
                        extractMetrics(data.results);
                    }
                } catch (error) {
                    console.error('Polling error:', error);
                }
            }, 1000);
        }
        
        function extractMetrics(resultsText) {
            const metrics = [];
            const lines = resultsText.split('\\n');
            
            for (let i = 0; i < lines.length; i++) {
                if (lines[i].includes('Throughput:')) {
                    const prevLine = lines[i-1] || '';
                    const match = lines[i].match(/([0-9.]+)\\s*(ops\\/sec|games\\/sec)/);
                    if (match) {
                        let name = prevLine.replace(/[0-9.]/g, '').trim();
                        metrics.push({
                            name: name || 'Performance',
                            value: parseFloat(match[1]).toFixed(2),
                            unit: match[2]
                        });
                    }
                }
            }
            
            if (metrics.length > 0) {
                displayMetrics(metrics);
            }
        }
        
        function displayMetrics(metrics) {
            const grid = document.getElementById('metricsGrid');
            grid.style.display = 'grid';
            grid.innerHTML = metrics.map(m => `
                <div class="metric-card">
                    <h3>${m.name}</h3>
                    <div class="value">${m.value}</div>
                    <div class="unit">${m.unit}</div>
                </div>
            `).join('');
        }
